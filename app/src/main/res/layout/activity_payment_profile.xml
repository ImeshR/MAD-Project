<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.payment_profile"
    android:orientation="vertical"
    android:background="@color/s_primary_color"
    tools:ignore="MissingConstraints">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottmoNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:background="@drawable/s_profilepart"
        app:layout_constraintBottom_toTopOf="@+id/BottmoNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s_greating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Welcome Back"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/s_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="Sachintha Heshan"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/s_profilePic"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/profile_P" />

    </LinearLayout>

